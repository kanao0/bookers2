<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'books/index', user: @user,book: @book %>
      </div>
      
      <div class='col-md-8 offset-md-1'>
          <!--自分が投稿したものだけ表示したい-->
      <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
          <!--indexアクションで作成した@booksのデータを出力-->
              <% @books.each do |book| %>
              <tr>
    <!--image_tag写真,↑book.user,bookの中の投稿者の情報もってきてるget_profile_image(100,100)表示メソッド-->
    <!--<td>< %= image_tag book.user.get_profile_image(100,100) %></td>-->
              　<td><%= link_to user_path(book.user.id) do %>
                    <%= image_tag book.user.get_profile_image(100,100) %>
                    <% end %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
       </div>
    </div>
  </div>
</main>