<div>
  <%= flash[:notice] %>
</div>

<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>


<div>ユーザー編集へ↓
  <%= link_to edit_user_path(@user.id) do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div> 

<h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
  
    <div>Title</div>
    <%= f.text_field :title %>
  
    <div>Opinion</div>
    <%= f.text_area :body %>
  
    <div><%= f.submit 'Create Book' %></div>
  <% end %>


<div>右に配置
<!--自分が投稿したものだけ表示したい-->
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
    <!--indexアクションで作成した@booksのデータを出力-->
    <% @books.each do |book| %>
      <tr>
        <!--image_tag写真,↑book.user,bookの中の投稿者の情報もってきてるget_profile_image(100,100)表示メソッド-->
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>  
  
  