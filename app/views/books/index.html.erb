<div>左に配置
  <h1>Booksページ</h1>
  <h2>User info</h2>

  
  
  <h2>New book</h2>
     <!--indexアクションで作ったデータを入れる箱、空っぽなので送信すると自動的にcreate処理にいく-->
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
    
      <div>Title</div>
      <%= f.text_field :title %>
    
      <div>Opinion</div>
      <%= f.text_area :body %>
    
      <div><%= f.submit 'Create Book' %></div>
    <% end %>
</div>  
  
<div>右に配置  
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
    <!--indexアクションで作成した@booksのデータを出力-->
    <% @books.each do |book| %>
      <tr>
        <!--image_tag写真,↑book.user,bookの中の投稿者の情報もってきてるget_profile_image(100,100)表示メソッド-->
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>  
  
  
  
  
