

  <div>左に配置
  <h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
  
<div>
  <%= link_to edit_user_path(@user.id) do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div> 


  <h2>New book</h2>
     <!--indexアクションで作ったデータを入れる箱、空っぽなので送信すると自動的にcreate処理にいく-->
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
    
      <div>Title</div>
      <%= f.text_field :title %>
    
      <div>Opinion</div>
      <%= f.text_area :body %>
    
      <div><%= f.submit 'Create Book' %></div>
    <% end %>
</div>