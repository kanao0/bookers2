<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'index', user: @user,book: @book_new %>
      </div>
      
      <div class='col-md-8 offset-md-1'>
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
            <%=link_to user_path(@book.user.id) do  %>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <% end %>
             <br>
              <%= link_to @book.user.name, user_path(@book.user_id) %>
            </td>
            <td>
              <%= link_to @book.title,book_path %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
            <td>
              <!--showアクションで探してきたデータ編集する？edit(編集画面へ)-->
              <%= link_to "Edit", edit_book_path(@book.id) %>        
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
            </td>
            <% end %>  
          </tr>
        </table>
      </div>
    </div>
  </div>
</main> 